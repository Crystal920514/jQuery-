#wrap
  width 100%
  height 100%
  #header
    width 100%
    height 72px
    display flex
    justify-content space-around
    background-color white
    align-items center
    border-bottom 1px solid #b7cfea
    .header-logo
      width 25%
      height 65px
      line-height 65px
      text-align center
      margin-left 15px
      >img
        height 40px
        margin-top 12px
    .header-address
      width 15%
      height 65px
      display flex
      font-size 16px
      align-items center
      justify-content center
      >p
        font-weight bold
    .header-nav
      height 80%
      width 45%
      display flex
      align-items center
      margin-right 50px
      >p
        text-align center
        flex 1
        color #121212
        font-weight bold
        font-size 16px
      .bus-login
        background-color #e94840
        color white
        height 30px
        line-height 30px
        border-radius 10px
  #content
    width 100%
    .content-top
      width 100%
      height 420px
      background-color #E3F5FF
      position relative
      .top-list
        height 100%
        width 180px
        background-color #757881
        position absolute
        top 0
        left 100px
        z-index 2
        >li
          width 100%
          height 10%
          text-align center
          line-height 42px
          >a
            color white
            font-size 16px
            font-weight bold
      .content-swiper
        position absolute
        width 100%
        height 420px
        .swiper-container
          height 100%
